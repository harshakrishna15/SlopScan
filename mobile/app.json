{
  "expo": {
    "name": "ShelfScan",
    "slug": "shelfscan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "shelfscan",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f0f4ef"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "ShelfScan needs camera access to scan food products.",
        "NSPhotoLibraryUsageDescription": "ShelfScan needs photo library access to select product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f0f4ef"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "ShelfScan needs camera access to scan food products."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "ShelfScan needs photo library access to select product images."
        }
      ]
    ]
  }
}
